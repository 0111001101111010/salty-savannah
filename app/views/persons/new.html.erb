<%= form_for :post, url: persons_path do |f| %>
  <p>
    <%= f.label :firstname %><br>
    <%= f.text_field :title %>
  </p>

 <p>
    <%= f.label :lastname %><br>
    <%= f.text_field :title %>
  </p>

 <p>
    <%= f.label :email %><br>
    <%= f.text_field :title %>
 </p>

 <p>
    <%= f.label :password %><br>
    <%= f.text_field :title %>
 </p>
 

<p>
    <%= f.label :address %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :organization %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
